  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="xcopy &quot;$(ProjectDir)Plugin\*.*&quot;  &quot;$(TargetDir)\Plugin&quot; /Y /I /E" />
  </Target>

